{
  "extends": ["config:base", "group:allNonMajor", ":semanticCommits"],
  "baseBranches": [
    "main"
  ],
  "labels": [
    "enhancement"
  ],
  "reviewers": ["xymb-endcrystalme"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": [
        "**"
      ],
      "allowedVersions": "!/\\-SNAPSHOT$/"
    }
  ]
}
